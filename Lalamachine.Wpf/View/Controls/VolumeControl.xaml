<UserControl x:Class="Lalamachine.Wpf.View.Controls.VolumeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lalamachine.Wpf.View.Controls"
             xmlns:converter="clr-namespace:Lalamachine.Wpf.View.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:VolumeSizeConverter x:Key="volumeSizeConverter" />
        <converter:MutedDisplayConverter x:Key="mutedDisplayConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ToggleButton Grid.Row="0" Grid.Column="0" x:Name="MutedButton"
                      MouseWheel="MutedButton_MouseWheel"
                      FontSize="{Binding Path=Value, ElementName=VolumeSlider, Converter={StaticResource volumeSizeConverter}}"
                      IsChecked="{Binding Path=Muted, Mode=TwoWay}"
                      Content="{Binding Path=Muted, Converter={StaticResource mutedDisplayConverter}}" />
        <Slider x:Name="VolumeSlider" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                Minimum="0" Maximum="100" Value="{Binding Path=Volume, Mode=OneWayToSource}" />
    </Grid>
</UserControl>
