<UserControl x:Class="Lalamachine.Wpf.View.Controls.VolumeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lalamachine.Wpf.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:MutedDisplayConverter x:Key="mutedDisplayConverter" />
        <local:VolumeModel x:Key="volumeModel" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ToggleButton Grid.Row="0" Grid.Column="0" x:Name="MutedButton"
                      IsChecked="{Binding Path=Muted, Source={StaticResource volumeModel}, Mode=TwoWay}"
                      Content="{Binding Path=Muted, Source={StaticResource volumeModel}, Converter={StaticResource mutedDisplayConverter}}" />
        <Slider Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
