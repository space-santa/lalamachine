<UserControl x:Class="Lalamachine.Wpf.View.Controls.PlaylistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lalamachine.Wpf.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="PlaylistGrid" ItemsSource="{Binding Path=Playlist}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Track" Binding="{Binding Path=Track}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Path=Title}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
