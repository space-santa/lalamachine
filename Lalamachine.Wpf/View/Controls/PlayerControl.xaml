<UserControl x:Class="Lalamachine.Wpf.View.Controls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lalamachine.Wpf.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:PlayerButtonsControl Grid.Row="0" Grid.Column="0" />
        <local:VolumeControl x:Name="volumeControl" Grid.Column="1"  Volume="{Binding Path=PlayerVolume, Mode=TwoWay}" />
    </Grid>
</UserControl>
