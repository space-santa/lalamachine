{
  "name": "lala-machine",
  "version": "0.0.0",
  "description": "Rename supported files to the orig datetime using the EXIF tag or the filename.",
  "author": "Space Santa",
  "main": "main.js",
  "license": "Apache-2.0",
  "scripts": {
    "start:electron": "ng build --base-href ./ && electron main.js",
    "ng": "ng",
    "start": "electron-forge start",
    "build": "ng build --base-href ./",
    "watch": "ng build --base-href ./ --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~15.0.4",
    "@angular/common": "~15.0.4",
    "@angular/compiler": "~15.0.4",
    "@angular/core": "~15.0.4",
    "@angular/forms": "~15.0.4",
    "@angular/platform-browser": "~15.0.4",
    "@angular/platform-browser-dynamic": "~15.0.4",
    "@angular/router": "~15.0.4",
    "bootstrap": "^5.2.3",
    "electron-squirrel-startup": "^1.0.0",
    "exifr": "^7.1.3",
    "tslib": "^2.4.1",
    "w3-css": "^4.1.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~15.0.5",
    "@angular/cli": "~15.0.5",
    "@angular/compiler-cli": "~15.0.4",
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@space-santa/electron-builder": "^15.0.6",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "electron": "^22.0.0",
    "jest": "^28.0.0",
    "jest-preset-angular": "^12.2.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.8.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/out/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "image_renamer_js"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
